-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th Movie Title
      %th{:class => @hiliteT}= link_to "Movie Title", '?sorted=by_titles'
      %th Rating
      %th Release Date
      %th{:class => @hiliteR}= link_to "Release Date", '?sorted=by_release_date'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
